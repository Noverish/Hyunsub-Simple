<html>
  <head>
    <title>Node Video Streaming</title>
  </head>
  <body background-color="white">
    <h1>Node Video Streaming</h1>
    <h2>User: <%= username %></h2>
    <h3>Path: <%= path %></h3>
    <hr>
    <table>
      <thead>
        <th>Name</th>
        <th>Size</th>
      </thead>
      <tbody>
        <% for(var i = 0; i < files.length; i++) { %>
        <tr>
          <td><a href="<%= files[i].path %>"><%= files[i].name %></a></td>
          <td><%= files[i].size || '-' %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <hr>
  </body>
</html>
